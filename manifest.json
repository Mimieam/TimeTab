{
  "manifest_version": 3,
  "name": "TimeTab",
  "version": "1.0",
  "permissions": ["tabs", "activeTab", "storage", "webNavigation"],
  "background":{
    "service_worker": "background.mjs",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.mjs"],
      "run_at": "document_end",
      "world": "ISOLATED"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "**/*",
        "loader.mjs",
        "tracking.mjs"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  }
}
